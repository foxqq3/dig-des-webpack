root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false
max_line_length = 90

[*.scss]
ij_scss_use_double_quotes = true

[*.html]
ij_html_quote_style = double

[*.js]
quote_type = single
ij_javascript_use_double_quotes = false